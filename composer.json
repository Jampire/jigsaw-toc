{
    "name": "jampire/jigsaw-toc",
    "type": "library",
    "description": "Adds Table of Contents capability for Jigsaw Static Site Generator",
    "keywords": [
        "TOC",
        "Table of Contents",
        "jigsaw",
        "markdown",
        "static",
        "site",
        "generator"
    ],
    "homepage": "https://github.com/Jampire/jigsaw-toc",
    "license": "MIT",
    "authors": [
        {
            "name": "Dzianis Kotau",
            "email": "me@dzianiskotau.com",
            "homepage": "https://dzianiskotau.com/",
            "role": "Owner"
        }
    ],
    "support": {
        "issues": "https://github.com/Jampire/jigsaw-toc/issues"
    },
    "require": {
        "tightenco/jigsaw": "^1.3"
    },
    "require-dev": {
        "overtrue/phplint": "^4.1",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Jampire\\Jigsaw\\Toc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jampire\\Jigsaw\\Toc\\Test\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12 src/ tests/",
        "phpcbf": "phpcbf --standard=PSR12 src/ tests/",
        "phplint": "phplint",
        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit",
        "sec-advisory": "composer update --dry-run roave/security-advisories"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
